@{
    ViewBag.Title = "Main Page";
}

<h2 style="text-align: center; margin-bottom: 20px;">Main Page</h2>

<div style="display: flex; justify-content: center; gap: 20px; flex-wrap: wrap; margin-top: 20px;">
    <a asp-controller="Store" asp-action="Index"
       style="display: inline-block; padding: 15px 30px; text-decoration: none; color: white; font-size: 18px; font-weight: bold; border-radius: 8px; text-align: center; background-color: #4CAF50; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); transition: transform 0.2s, box-shadow 0.2s;">Manage Stores</a>

    <a asp-controller="Item" asp-action="Index"
       style="display: inline-block; padding: 15px 30px; text-decoration: none; color: white; font-size: 18px; font-weight: bold; border-radius: 8px; text-align: center; background-color: #2196F3; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); transition: transform 0.2s, box-shadow 0.2s;">Manage Items</a>

    <a asp-controller="StoreItems" asp-action="AddItem"
       style="display: inline-block; padding: 15px 30px; text-decoration: none; color: white; font-size: 18px; font-weight: bold; border-radius: 8px; text-align: center; background-color: #FFC107; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); transition: transform 0.2s, box-shadow 0.2s;">Add Item to Store</a>
</div>
